<Window x:Class="The_Movies.View.DisplayError"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Error" Height="200" Width="400" Background="#363131">
    
    <Grid>
        <Border Background="#B07A6B" CornerRadius="10" Padding="10" BorderBrush="#986051" BorderThickness="2.5">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Name="ErrorMessageTextBlock" Text="An error occurred." TextWrapping="Wrap" FontSize="16" Foreground="White" HorizontalAlignment="Center" Margin="10"/>
                <Button Content="OK" Width="80" Height="30" Margin="10,20,10,0" Background="#D8998A" BorderBrush="#986051" Foreground="White" FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="15" Click="OkButton_Click" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
