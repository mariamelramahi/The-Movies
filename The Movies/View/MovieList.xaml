<Window x:Class="The_Movies.View.MovieList"
        Background="#363131"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:The_Movies.ViewModel"
        mc:Ignorable="d"
        Title="Window1" Height="500" Width="700">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="The Movies" 
            VerticalAlignment="Top" 
            FontFamily="Bahnschrift SemiBold SemiCondensed" 
            Height="50" Width="219" 
            FontSize="50" 
            Foreground="White"/>
        <DataGrid x:Name="MyDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,119,0,93" Width="627"
                  AutoGenerateColumns="True" HorizontalAlignment="Stretch"/>
        <Button Content="Back" HorizontalAlignment="Left" 
            Height="39" Margin="37,422,0,0" 
            VerticalAlignment="Top" Width="114"
            Background="#D8998A"
            BorderBrush="#986051"
            BorderThickness="1.5"
            FontFamily="Bahnschrift SemiBold SemiCondensed" FontSize="15"
            Click="Button_Click_3"/>
    </Grid>
</Window>

